{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "paths": {
      "*": ["../../node_modules/*", "node_modules/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021",
    "typeRoots": ["node_modules/@types", "node_modules/@automatisch/types"]
  },
  "include": ["src/**/*", "bin/**/*"]
}
