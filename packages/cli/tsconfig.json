{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021",
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"]
}
